package com.qa.GoldilocksBearNecessities;


public class App 
{
	
	static int goldilocksWeight = 100;
    static int maximumPorridgeTemp = 80;
    
    public static void main( String[] args )
    {
       
    	checkWeightandPorridgeTemp(30,50);
       
       
    }
    
    public static void checkWeightandPorridgeTemp(Integer chairCapacity, Integer porridgeTemp)
    {
    	if(goldilocksWeight <= chairCapacity && maximumPorridgeTemp <= porridgeTemp)
    	{
    		System.out.println(chairCapacity.toString() + " " + porridgeTemp.toString());
    		System.out.println("Goldilocks is happy with what she got");
    	}
    	else 
    	{
    		System.out.println(chairCapacity.toString() + " " + porridgeTemp.toString());
    		System.out.println("Goldilocks is not happy");
    	}
    }
}
